{{!
    @template block_eledia_telc_coursesearch/nav-category-dropdown

    This template renders grouping dropdown.

    Example context (json):
    "categories" : {
        [
            {
                "id": 1,
                "name": "categoryname"
            }
        ]
    },
    "catselections" : {
        [
            {
                "id": 1,
                "name": "categoryname"
            }
        ]
    }
}}
<ul class="dropdown-menu dropdown-tags tagsprevent" role="menu" data-show-active-item data-skip-active-class="true" data-active-item-text aria-labelledby="groupingdropdown">
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^tagsselections}}
    <li>
        <a class="dropdown-item tagsprevent category-no" href="#" data-tags-id="{{id}}"
           role="menuitem" >
            {{#str}} notagsselected, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{/tagsselections}}
    {{#tagsselections}}
    <li>
        <a class="dropdown-item tagsprevent tags-selected" href="#" data-tags-id="{{id}}"
           role="menuitem" >
            {{name}}
        </a>
    </li>
    {{/tagsselections}}
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^tags}}
    <li>
        <a class="dropdown-item tagsprevent category-no" href="#" data-tags-id="{{id}}"
           role="menuitem" >
            {{#str}} notagsavailable, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{/tags}}
    {{#tags}}
    <li>
        <a class="dropdown-item tagsprevent tags-selectable" href="#" data-tags-id="{{id}}"
           role="menuitem" >
            {{name}}
        </a>
    </li>
    {{/tags}}
</ul>
