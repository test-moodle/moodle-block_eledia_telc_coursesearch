{{!
    @template block_eledia_telc_coursesearch/nav-category-dropdown

    This template renders grouping dropdown.

    Example context (json):
    {
        "categories": [
            {
                "id": 1,
                "name": "categoryname"
            }
        ],
        "catselections": [
            {
                "id": 1,
                "name": "categoryname"
            }
        ]
    }
}}
<ul class="dropdown-menu dropdown-categories catprevent" role="menu" data-show-active-item data-skip-active-class="true" data-active-item-text aria-labelledby="groupingdropdown">
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^catselections}}
    <li>
        <a class="dropdown-item catprevent category-no" href="#" data-cat-id="{{id}}"
           role="menuitem" >
            {{#str}} nocatselected, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{/catselections}}
    {{#catselections}}
    <li>
        <a class="dropdown-item catprevent category-selected" href="#" data-cat-id="{{id}}"
           role="menuitem" >
            {{name}}
        </a>
    </li>
    {{/catselections}}
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^categories}}
    <li>
        <a class="dropdown-item catprevent category-no" href="#" data-cat-id="{{id}}"
           role="menuitem" >
            {{#str}} nocatavailable, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{/categories}}
    {{#categories}}
    <li>
        <a class="dropdown-item catprevent category-selectable" href="#" data-cat-id="{{id}}"
           role="menuitem" >
            {{name}}
        </a>
    </li>
    {{/categories}}
</ul>
